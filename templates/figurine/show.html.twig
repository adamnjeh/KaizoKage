{% extends 'base.html.twig' %}
{% block title %}{{ figurine.nom }}{% endblock %}
{% block body %}
<div class="container py-4">
  <a href="{{ path('figurine_index') }}" class="btn btn-outline-secondary btn-sm mb-3">← Retour</a>

  <h1 class="h3 mb-3">{{ figurine.nom }}</h1>
  <dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">{{ figurine.id }}</dd>

    <dt class="col-sm-2">Vitrine</dt>
    <dd class="col-sm-10">
      {% if figurine.vitrine %}
        <a href="{{ path('vitrine_show', { id: figurine.vitrine.id }) }}">Vitrine #{{ figurine.vitrine.id }}</a>
      {% else %}
        —
      {% endif %}
    </dd>
  </dl>
</div>
{% endblock %}
