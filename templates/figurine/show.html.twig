{% extends 'base.html.twig' %}

{% block title %}{{ figurine.nom }}{% endblock %}

{% block body %}
  {% if figurine.vitrine %}
    <a href="{{ path('app_vitrine_show', { id: figurine.vitrine.id }) }}">← Retour à la vitrine</a>
  {% else %}
    <a href="{{ path('app_vitrine_index') }}">← Retour à la liste des vitrines</a>
  {% endif %}

  <h1>{{ figurine.nom }}</h1>

  <table class="table">
    <tbody>
      <tr>
        <th>ID</th>
        <td>{{ figurine.id }}</td>
      </tr>
      <tr>
        <th>Nom</th>
        <td>{{ figurine.nom }}</td>
      </tr>
      {% if figurine.vitrine %}
      <tr>
        <th>Vitrine</th>
        <td>
          <a href="{{ path('app_vitrine_show', { id: figurine.vitrine.id }) }}">
            Vitrine n°{{ figurine.vitrine.id }}
          </a>
        </td>
      </tr>
      {% endif %}
    </tbody>
  </table>
{% endblock %}
