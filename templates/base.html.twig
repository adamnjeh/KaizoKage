<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}KaizoKage{% endblock %}</title>

    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="{{ asset('css/styles.css') }}" rel="stylesheet">

    <style>
      :root { --kk-radius: 1rem; --kk-ease: cubic-bezier(.2,.7,.2,1); }
      .card { border:0; border-radius:var(--kk-radius); transition:transform .2s var(--kk-ease), box-shadow .2s var(--kk-ease); position:relative; }
      .card:hover { transform: translateY(-4px); box-shadow: 0 10px 24px rgba(0,0,0,.10); }
      .reveal { opacity:0; transform: translateY(8px); transition: opacity .4s var(--kk-ease), transform .4s var(--kk-ease); }
      .reveal.revealed { opacity:1; transform:none; }
      .ratio-img { object-fit: cover; width:100%; height:100%; border-radius: .75rem; }
      .navbar-brand { letter-spacing:.2px; }
      .kk-hero { background: linear-gradient(180deg,#f8f9fa,transparent); }
    </style>

    {% block stylesheets %}{% endblock %}
  </head>
  <body class="bg-light">

    {# NAVBAR #}
    <nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
      <div class="container">
        <a class="navbar-brand fw-semibold" href="{{ path('home') }}">KaizoKage</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav"
          aria-controls="mainNav" aria-expanded="false" aria-label="Basculer la navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="mainNav">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link {% if app.request.get('_route') == 'home' %}active{% endif %}" href="{{ path('home') }}">Accueil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {% if app.request.get('_route') starts with 'vitrine_' %}active{% endif %}" href="{{ path('vitrine_index') }}">Vitrines</a>
            </li>
            <li class="nav-item">
              <a class="nav-link {% if app.request.get('_route') starts with 'figurine_' %}active{% endif %}" href="{{ path('figurine_index') }}">Figurines</a>
            </li>
          </ul>

          <a class="btn btn-outline-primary" href="{{ path('vitrine_index') }}"><i class="bi bi-search"></i> Explorer</a>
        </div>
      </div>
    </nav>

    {% block body %}{% endblock %}

    <footer class="border-top py-4 mt-5">
      <div class="container text-center small text-secondary">
        KaizoKage · {{ "now"|date("Y") }}
      </div>
    </footer>

    {# Bootstrap JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      // Reveal-on-scroll
      document.addEventListener('DOMContentLoaded', () => {
        const io = new IntersectionObserver((entries)=>{
          entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('revealed'); io.unobserve(e.target); } });
        }, { threshold: .08 });
        document.querySelectorAll('.reveal').forEach(el => io.observe(el));
      });
      // Small toast helper
      window.showToast = (msg) => {
        const el = document.getElementById('kk-toast'); if (!el) return;
        el.querySelector('.toast-body').textContent = msg;
        new bootstrap.Toast(el).show();
      };
    </script>

    {# Global toast #}
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index:1080">
      <div id="kk-toast" class="toast align-items-center border-0 shadow" role="status" aria-live="polite" aria-atomic="true">
        <div class="d-flex">
          <div class="toast-body">Action effectuée.</div>
          <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Fermer"></button>
        </div>
      </div>
    </div>

    {% block javascripts %}{% endblock %}
  </body>
</html>
